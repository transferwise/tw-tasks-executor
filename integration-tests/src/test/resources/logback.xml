<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} %X{twTaskId}-%X{twTaskVersion} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.transferwise.tasks.helpers.kafka" level="debug" />

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
